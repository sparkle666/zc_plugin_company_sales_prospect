{
  "openapi": "3.0.2",
  "info": {
    "title": "Sales Prospects API (Rooms endpoints)",
    "description": "Sales prospects is a plugin that lets you to keep track of your organizationâ€™s prospects and rooms.",
    "version": "1.0.0",
    "contact": {
      "email": "developer@zuri.chat"
    }
  },
  "tags": [
    {
      "name": "Room"
    }
  ],
  "paths": {
    "/api/v1/add-to-room/": {
      "post": {
        "tags": [
          "Room"
        ],
        "summary": "Adds users to a room.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/room"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/_id"
          },
          {
            "$ref": "#/components/parameters/room_name"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Room",
                "type": "object",
                "properties": {
                  "user": {
                    "type": "integer",
                    "default": 1
                  },
                  "room_name": {
                    "type": "string",
                    "default": "prospects"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/room/": {
      "get": {
        "tags": [
          "Room"
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/leave-room/": {
      "post": {
        "tags": [
          "Room"
        ],
        "summary": "Deletes users from a room.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/room"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/_id"
          },
          {
            "$ref": "#/components/parameters/room_name"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Room",
                "type": "object",
                "properties": {
                  "user": {
                    "type": "integer",
                    "default": 1
                  },
                  "room_name": {
                    "type": "string",
                    "default": "prospects"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "app_id": []
    }
  ],
  "components": {
    "schemas": {
      "room": {
        "title": "Room",
        "type": "object",
        "properties": {
          "user": {
            "type": "integer",
            "default": 1
          },
          "room_name": {
            "type": "string",
            "default": "prospects"
          }
        }
      }
    },
    "parameters": {
      "_id": {
        "name": "user_id",
        "in": "query",
        "description": "**user_id**. *Example: 1*. You can fetch users by their id.",
        "schema": {
          "type": "integer",
          "default": 1
        },
        "required": true
      },
      "room_name": {
        "name": "room_name",
        "in": "query",
        "description": "**Room Name**. *Example: Prospect*. This is the name of the room",
        "schema": {
          "type": "string",
          "default": "Prospect"
        },
        "required": true
      }
    },
    "securitySchemes": {
      "app_id": {
        "type": "apiKey",
        "description": "API key to authorize requests.",
        "name": "Session",
        "in": "cookie"
      }
    }
  },
  "servers": [
    {
      "description": "Sales Prospects API",
      "url": "https://sales.zuri.chat/"
    }
  ]
}